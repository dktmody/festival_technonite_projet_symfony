{% extends 'base.html.twig' %}

{% block title %}Hello AgendaController!{% endblock %}

{% block body %}
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Date</th>
			<th scope="col">Créneau horaire</th>
			<th scope="col">Artistes</th>
			<th scope="col">Réserver</th>
		</tr>
	</thead>
	<tbody>
        {% for i in artistes %}
                <tr>
                    <th>20/08/2021</th>
                    <td>16h-18h</td>
                    <td>DJ {{i.name}} </td>
                    <td class="btn btn-primary btn-sm">Réserver une place</td>
                </tr>	
        {% endfor %}


	</tbody>
</table>

{% endblock %}
